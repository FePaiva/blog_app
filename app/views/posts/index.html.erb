<p style="color: green"><%= notice %></p>
<div class="container">
<h1>Posts</h1>
<div id="posts">
  <% @posts.each do |post| %>
  <%# rendering the post model as a partial %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>
<%= link_to "New post", new_post_path %>
</div>